<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toshiba.yaleastemari.Questions.QuestionLevelFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/level2"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/level1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@+id/level1"
            app:layout_constraintRight_toLeftOf="@+id/level3" />

        <Button
            android:id="@+id/level1"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 1"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/level4"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 4"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnLevel4_star"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/level3"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 3"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/level2"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/level5"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 5"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/level4"
            app:layout_constraintLeft_toRightOf="@+id/level4"
            app:layout_constraintRight_toLeftOf="@+id/level6" />

        <Button
            android:id="@+id/level6"
            android:layout_width="112dp"
            android:layout_height="87dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/small_button_bg"
            android:text="ደረጃ 6"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/level5"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btnLevel1_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/level1" />

        <Button
            android:id="@+id/btnLevel4_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/btnLevel2_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnLevel1_star"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toRightOf="@+id/level1"
            app:layout_constraintRight_toLeftOf="@+id/level3" />

        <Button
            android:id="@+id/btnLevel3_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnLevel2_star"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btnLevel5_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/level4"
            app:layout_constraintRight_toLeftOf="@+id/level6"
            app:layout_constraintTop_toBottomOf="@+id/level5" />

        <Button
            android:id="@+id/btnLevel6_star"
            android:layout_width="112dp"
            android:layout_height="36dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/level6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
