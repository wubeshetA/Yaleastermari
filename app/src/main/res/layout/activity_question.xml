<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.example.toshiba.yaleastemari.Questions.QuestionActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button

            android:id="@+id/btn_back_inQuestionActivity"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Levels_container"
        android:layout_width="0dp"
        android:layout_height="279dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/haHuQuestion"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/corner_curved_board"
            android:paddingRight="0dp"
            android:text="ሀሁ  ጥያቄዎች"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:layout_weight="1"
            android:background="@drawable/corner_curved_board"
            android:text="123 ጥያቄዎች"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
