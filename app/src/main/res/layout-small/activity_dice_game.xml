<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toshiba.dicegame.DiceGame"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/txt_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="ተጨዋች2：0"
        android:textSize="26sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/computer_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice_6"
            android:layout_margin="18dp"/>

        <ImageView
            android:id="@+id/cpu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-110"
            android:src="@drawable/arrow"
            android:visibility="visible" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="ከ"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:progress="20" />

        <TextView
            android:id="@+id/txt_seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/player_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dice_6"
        android:layout_margin="18dp"/>
        <ImageView
            android:id="@+id/player_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:rotation="-110" />
        </LinearLayout>

    <TextView
        android:id="@+id/txt_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="ተጨዋች1：0"
        android:textSize="28sp"
        android:textStyle="bold" />
</LinearLayout>
